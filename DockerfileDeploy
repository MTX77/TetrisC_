FROM ubuntu:latest AS deploy

WORKDIR ./TetrisC

RUN apt-get update && apt-get install -y \
    git \
    pkg-config \
    cmake \
    cmake-data \
    libncurses5-dev \
    check \
    && git clone https://github.com/lucadellalib/TetrisC.git \
    && cd TetrisC \
    && cmake . && make

FROM tester AS deploy

CMD ["TetrisC"]
